<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Confluent Inc.</Authors>
    <Description>Integration tests for Confluent.Kafka</Description>
    <Copyright>Copyright 2016-2017 Confluent Inc.</Copyright>
    <PackageTags>Kafka;Confluent;librdkafka;tests</PackageTags>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <AssemblyName>Confluent.Kafka.IntegrationTests</AssemblyName>
    <PackageId>Confluent.Kafka.IntegrationTests</PackageId>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
  </PropertyGroup>

  <ItemGroup>
    <None Update="kafka.parameters.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/Confluent.Kafka/Confluent.Kafka.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.0.0" />
    <PackageReference Include="xunit" Version="2.2.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>
  
</Project>
